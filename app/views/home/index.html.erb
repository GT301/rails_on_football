<div class="columns">
  <div class="column">
    <h2 class="title is-2">Clubs List</h2>
    <ol class="ml-5">
      <% @clubs.each do |club| %>
        <li><%= link_to club.club_name, club %></li>
      <% end %>
    </ol>
  </div>

  <div class="column">
    <h2 class="title is-2">Leagues List</h2>
    <ol class="ml-5">
      <% @leagues.each do |league| %>
        <li><%= link_to league.league_name, league %></li>
      <% end %>
    </ol>
  </div>
</div>